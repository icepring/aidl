<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context="com.tym.aidl.MainActivity">

    <Button
        android:id="@+id/add_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add book"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/query_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="query books"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/register_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="register book"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/unregister_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unregister books"/>

</LinearLayout>
